page{
  background-color: #e9ecef;
}

.all{
  margin: 25rpx;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  font-size: large;
}

.title input{
  width: 90%;
  padding-bottom: 15rpx;
}

.article{
  word-break: break-all;
  white-space: pre-wrap;
  width: 100%;
  padding-top: 15rpx;
  border-top: 1px solid #f5f5f5;
}

.mid{
  background-color: #ffffff;
  padding: 20rpx;
  margin: 25rpx;
  border-radius: 8rpx;
}

.chose_title{
  color: #333;
  font-weight: bold;
}
 
.imageRootAll {
  margin: 6rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.imgItem {
  margin: 6rpx;
  position: relative;
  width: 200rpx;
  height: 200rpx;
  background: gainsboro;
  margin-top: 20rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.closeImg {
  position: absolute;
  right: 0px;
  width: 40rpx;
  height: 40rpx;
}
.photo {
  width: 50%;
  height: 50%;
  margin: 25%;
}

.btn{
  justify-content: center;
  display: flex;
}

.btn_t{
  word-break: keep-all;
  color: #ffffff;
  background-color: #04BE02;
  padding: 24rpx 20rpx;
  border-radius: 8rpx;
  font-size: 35rpx;
  width: 320rpx;
  text-align: center;
}


/* 时间 */
picker{
  margin: 0 25rpx;
  border-radius: 8rpx;
  background-color: #fff;
  padding: 20rpx 10px;
}
.font30{
  font-size: 30rpx;
}

.color3{
  color: #333;
}

.color6{
  color: #666;
}

.timeIcon{
  color:#666;
  font-size:18rpx;
  margin-left: 5rpx;
}
