.member{
  background-color: white;
  padding: 8px 15px;
  border-radius: 8px;
  margin: 0 17px;
  overflow: hidden;
  margin-bottom: 16px;
}

.member_top{
  display: flex;
}

.member_title{
  font-size: 14pt;
  font-weight: bold;
  margin-bottom: 8px;
