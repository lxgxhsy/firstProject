/* pages/activityIndex/comand.wxss */
page{
  display: flex;
  flex-direction: column;
   height: 100%;
}

.content-main{
  display: block;
  background-color: #ffffff;
  overflow: hidden;
}
.content-main-top{
  position: relative;
  display: flex;
  padding-right: 10rpx;
   height: 140rpx;
    background-color: #ffffff;
    justify-content: flex-end;
    align-items: center;

}
.content-main-top-left{
  width: 96rpx;
  height: 96rpx;
  font-size: 2em;
  position: absolute;
  left:30rpx;
  font-variant: small-caps;
  margin: 0;
  padding: 0;
  display: inline-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  background-color: #ccc;
  color: #ffffff;
  white-space: nowrap;
  border-radius: 50%;
}
.content-main-top-right{
  width: 40rpx;
  height: 40rpx;
  font-size: 2em;
  position: absolute;
  left:600rpx;
  margin-top: -30px;
}
.content-main-top-right image{
  width: 40rpx;
  height: 40rpx;
}
.content-Personname{
  flex:1;
  position: absolute;
  left:130rpx;
}

.content-main-left{
  padding: 0 30rpx 0;
	max-height: 6.4em;
	overflow: hidden;
	font-size: 30rpx;
	margin-bottom: 20rpx;

}
view,
scroll-view,
swiper,
button,
input,
textarea,
label,
navigator,
image {
	box-sizing: border-box;
}
.content-main-image{
  display: flex;
  flex-wrap: wrap;
  flex: 1;
  padding-left: 30rpx;
  padding-right: 30rpx;

}

.content-main-images{
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
   width: 100%;
    height: 320rpx;
    border-radius: 6rpx;
}
.content-main-down{
  display: block;
  margin-top: 7px;
}
.content-main-down text{
  color: #aaaaaa;
  font-size: 10pt;
}
.content-main-down-left{
  position: relative;
  display: flex;
  padding-right: 10rpx;
   height: 140rpx;
    background-color: #ffffff;
    justify-content: flex-end;
    align-items: center;
}
.content-main-down-left-left{
  width: 96rpx;
  height: 96rpx;
  font-size: 2em;
  position: absolute;
  left:30rpx;
  font-variant: small-caps;
  margin: 0;
  padding: 0;
  display: inline-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  background-color: #ccc;
  color: #ffffff;
  white-space: nowrap;
  border-radius: 50%;
}
.content-main-down-right{
  flex:1;
  position: absolute;
  left:130rpx;

  border-radius: 2px;
  font-size: 16pt;

}


