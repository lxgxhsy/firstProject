page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #e9ecef;
}

.search {
  padding: 6px 18px;
  display: flex;
  background-color: #fff;
  height: 40px;
  border-bottom: 1rpx solid #ccc;
}

.search van-search {
  display: inline-flex;
}

.search_wid{
  width: 310px;
}

.btn_search{
  padding: 10px;
  margin-left: 10px;
}

.swiper{
  background-color: #fff;
  height: 200px;
  overflow: hidden;
}

.swiperImage {
  border-top: 1rpx solid #ccc;
  margin-top: 20rpx;
  width: 100%;
}

.content-first {
  background-color: #fff;
  margin-top: 20px;
  flex-direction: column;
  border: 1px solid #efefef;
  box-shadow: 1px 1px 15rpx #ddd;
  margin-left: 16px;
  margin-right: 16px;
  border-radius: 8px;
}

.content-first-first {
  margin-top: 10px;
  display: flex;
}

.index_title {
  margin-left: 10px;
  flex: 1;
  font-size: 16px;
  color: #5d5d5d;
  font-weight: 700;
}

.index_more {
  margin-right: 10px;
  font-size: 14px;
  color: #33C1D3;
  display: flex;
  justify-content: flex-end;
}

van-grid-item image {
  border: 1rpx solid #ccc;
  width: 100%;
  height: 90px
}

text {
  font-size: 12pt;
  color: #9c9c9c;
}